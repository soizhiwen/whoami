---
import type { Author } from "../../types/types";

interface Props {
  authors: Author[];
}

const { authors } = Astro.props;
---

<div class="flex flex-row gap-x-4 gap-y-1 flex-wrap justify-center pb-4">
  {
    authors.map((author) => (
      <div class="flex flex-col items-center text-center">
        <div class="flex flex-row">
          {author.url ? (
            <a
              class="link link-secondary link-hover"
              href={author.url}
              {...(author.url !== "/" ? { target: "_blank" } : {})}
            >
              {author.name}
            </a>
          ) : (
            author.name
          )}
          {author.notes && (
            <sup class="text-lg">
              {author.notes.map(
                (note, index, array) =>
                  note + (index < array.length - 1 ? "," : ""),
              )}
            </sup>
          )}
        </div>
        {author.institution && <div>{author.institution}</div>}
      </div>
    ))
  }
</div>
